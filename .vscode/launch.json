    "version": "0.2.0",
    "configurations": [
        {
            "name": "flask test entry point",
            "type": "python",
            "request": "launch",
            // "program": "${workspaceFolder}/py/main.py",
            // "console": "integratedTerminal",

            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/py/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}